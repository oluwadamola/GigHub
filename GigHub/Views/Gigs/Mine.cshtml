@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Mine";
}

<h2>My Upcomming Gigs</h2>

<ul class="gigs voffset4">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Venue
                </span>
                <span class="genre">
                    @gig.Genre.GenreName
                </span>
                <div class="actions">
                    <a href="@Url.Action("Edit","Gigs", new { id= gig.GigId})">Edit</a> 
                    |
                    <a href="#" class="js-cancel-gig" data-gig-id="@gig.GigId">Cancel</a>
                </div>
            </div>
        </li>
    }
</ul>
@section scripts{

    <script>
        $(document).ready(function() {
            $(".js-cancel-gig").click(function(e) {
                var button = $(e.target);
                bootbox.confirm({
                    title: "Cancel a Gig?",
                    message: "Are you sure you want to delete this gig? This cannot be undone.",
                    buttons: {
                        cancel: {
                            label: '<i class="fa fa-times"></i> Cancel',
                            className: "btn-default"

                        },
                        confirm: {
                            label: '<i class="fa fa-check"></i> Confirm',
                            className: "btn-danger"
                          }


                    },

                    callback: function (result) {

                        if(result){
                        $.ajax({
                            url: "/api/gigs/" + button.attr("data-gig-id"),
                            method: "DELETE"
                        })
                              .done(function () {

                                  button.parents("li").fadeOut(function () {
                                      $(this).remove();
                                  });
                              })
                              .fail(function () {
                                  alert("Something Went Wrong!");
                              });
                        }
                        else {
                            bootbox.hideAll();
                        }
                    }
                    

                });
            });
        });

    </script>
}
